<launch>
<!-- start rviz -->
  <node pkg="rviz" type="rviz" name="my_rviz" 
    args="-d $(find robowars)/src/level.rviz -f map"/>

  <node name="input" pkg="robowars" type="PlayerController.py" output="screen"/>
  <node name="server" pkg="robowars" type="Game.py" output="screen"/>

    <node name="ai1" pkg="robowars" type="AIController.py" output="screen">
	<param name="id" value="robot1" />
    </node>
    <node name="ai2" pkg="robowars" type="AIController.py">
	<param name="id" value="robot2" />
    </node>
    <node name="ai3" pkg="robowars" type="AIController.py">
	<param name="id" value="robot3" />
    </node>
</launch>
